#include <Adafruit_Sensor.h>
#include <DHT.h>

#define DHTPIN D2      // Pin del sensor de temperatura
#define DHTTYPE DHT11  // Cambia a DHT22 si usas otro tipo de sensor
#define LEDPIN D1      // Pin del LED

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  pinMode(LEDPIN, OUTPUT);
  dht.begin();
  Serial.begin(115200);
}

void loop() {
  // Lee la temperatura
  float temperature = dht.readTemperature();

  // Verifica si la lectura es válida
  if (isnan(temperature)) {
    Serial.println("Error al leer la temperatura!");
    return;
  }

  Serial.print("Temperatura: ");
  Serial.println(temperature);

  // Enciende el LED si la temperatura es mayor a 20°C
  if (temperature > 20) {
    digitalWrite(LEDPIN, HIGH);  // Enciende el LED
    delay(5000);                 // Mantiene el LED encendido por 5 segundos
    digitalWrite(LEDPIN, LOW);   // Apaga el LED
  }

  delay(2000);  // Espera antes de tomar otra lectura
}
